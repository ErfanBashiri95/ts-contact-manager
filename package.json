{
  "name": "ts-contact-manager",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "serve": "ts-node src/server.ts",
    "cm:list": "ts-node src/index.ts list",
    "cm:add:ali": "ts-node src/index.ts add --name Ali --email ali@mail.com --phone 123",
    "cm:update:ali": "ts-node src/index.ts update --email ali@mail.com --phone 999 --name \"Ali Reza\"",
    "cm:remove:ali": "ts-node src/index.ts remove --email ali@mail.com",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0"
  }
}
